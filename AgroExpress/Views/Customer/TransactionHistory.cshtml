@model AgroExpress.DataLayer.ViewModel.CustomerTransactionDate

@{
    ViewBag.Title = "TransactionHistory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <style>

        input {
            display: block;
            width: 100%;
            height: 34px;
            padding: 6px 12px;
            font-size: 14px;
            line-height: 1.42857143;
            color: #555;
            background-color: #fff;
            background-image: none;
            border: 1px solid #ccc;
        }
    </style>
    <link href="~/Content/ListStylesRuku.css" rel="stylesheet" />
    <h2 id="title">Transaction History</h2>
    <h3 id="title" style="color:green;"> <p style="text-align:center">Name: @Html.DisplayFor(Model => Model.Name)</p></h3>
    <div class="row">

        <div class="col-md-3">

        </div>

        <div class="col-md-3">
            <label>Select Start Date</label>
            <div class="form-group has-feedback">
                @Html.EditorFor(model => model.StartDate)
            </div>
        </div>

        <div class="col-md-3">
            <label>Select End Date</label>
            <div class="form-group has-feedback">
                @Html.EditorFor(model => model.EndDate)
                @Html.HiddenFor(Model => Model.ID)
            </div>
        </div>

        <div class="col-md-2">
            <label>&nbsp;</label>
            <div class="form-group has-feedback">
                <button type="submit" class="btn btn-primary btn-block btn-flat">Show</button>
            </div>
        </div>
        <div class="col-md-1">

        </div>
    </div>

    <div>

        <table class="table table-bordered table-striped">
            <tr>
                <th id="table-header">
                    Date
                </th>

                <th id="table-header">
                    Product 
                </th>
               

                <th id="table-header">

                    Total Paid
                </th>

            </tr>

            @foreach (var item in Model.transactiondetails)
            {
                <tr>
                    <td id="table-header">
                        @Html.DisplayFor(modelItem => item.BuyingDate)
                    </td>
                    <td id="table-header">
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    
                    <td id="table-header">
                        @Html.DisplayFor(modelItem => item.TotalPaid)
                        
                    </td>

                </tr>
            }

        </table>
    </div>
}