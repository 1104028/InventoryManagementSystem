@model AgroExpress.DataLayer.ViewModel.AddOrderListView
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Product Sale</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->

    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <!-- Ionicons -->

    <link href="~/Content/AdminLTE.min.css" rel="stylesheet" />
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->

    <link href="~/Content/_all-skins.min.css" rel="stylesheet" />
    <!-- Morris chart -->
    <!-- jQuery 3 -->
    <script src="~/Scripts/jquery.min.js"></script>

    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition skin-blue">
    <!-- Main content -->
    <section class="content content-wrapper">
        <h2 style="text-align:center">Place A Order</h2>
        @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    if (ViewBag.success != null)
    {
        <script>
            alert('@ViewBag.success'); // display string message
        </script>
}
    <style>
        .register-box {
            margin-top: 1%;
        }

        th, td {
            text-align: center;
        }
    </style>
    <script type="text/javascript">
        function ShowRow(ID) {
            ID += 1;

            var rw = document.getElementById("row " + ID);
            rw.style.display = 'table-row';
        }
    </script>

    <p style=" padding-left: 4%;
    padding-bottom: 1%;
    padding-top: 1%;
    font-weight: 800;">

    </p>
    <style>

        input, textarea,label {
            display: block;
            width: 100%;
            height: 34px;
            padding: 6px 12px;
            font-size: 14px;
            line-height: 1.42857143;
            color: #555;
            background-color: #fff;
            background-image: none;
            border: 1px solid #ccc;
        }
    </style>

int serialnumber = 1;
    <table class="table table-bordered table-striped">
        <tr>
            <th id="table-header">

                Item No
            </th>
            <th id="table-header">

                Products
            </th>

            <th id="table-header">
                Order Placing Date
            </th>
            <th id="table-header">
                Amount
            </th>

            <th>
                &nbsp;
            </th>

        </tr>
        @for (int i = 0; i < Model.orderlist.Count; i++)
    {
        serialnumber = i + 1;
        if (i == 0)
        {
            <tr id="row @i" style="display:table-row">
                <td id="table-header">

                    <labe>@serialnumber</labe>
                </td>
                <td id="table-header">
                    <label>Milk</label>
                    @Html.HiddenFor(modelItem => Model.orderlist[i].PKProductId)

                </td>

                <td id="table-header">
                    @Html.TextBoxFor(modelItem => Model.orderlist[i].OrderPlacingDateTime, new { type = "date" })
                    
                </td>
                <td id="table-header">
                    @Html.TextBoxFor(modelItem => Model.orderlist[i].Amount)
                </td>


                <td>
                    @if (i != Model.orderlist.Count - 1)
                {
                    <button onclick="ShowRow(@i)" type="button"> <i class="fa fa-plus"></i> </button>
            }


                </td>
            </tr>
    }
    else
    {
        <tr id="row @i" style="display:none">
            <td id="table-header">

                <labe>@serialnumber</labe>
            </td>
            <td id="table-header">

                @*@Html.HiddenFor(modelItem => Model.orderlist[i].PKProductId)*@
                @Html.DropDownListFor(modelItem => Model.orderlist[i].PKProductId, Model.orderlist[i].productlist, "- Please select a Product -", new { @class = "form-control" })

            </td>

            <td id="table-header">
                @Html.TextBoxFor(modelItem => Model.orderlist[i].OrderPlacingDateTime, new { type = "date" })
               
            </td>
            <td id="table-header">
                @Html.TextBoxFor(modelItem => Model.orderlist[i].Amount)
            </td>
            <td>
                @if (i != Model.orderlist.Count - 1)
            {
                <button onclick="ShowRow(@i)" type="button"> <i class="fa fa-plus"></i> </button>
        }


            </td>
        </tr>
}

}

        <tr>
            <td colspan="3"></td>
            <td>
                <button type="submit" name="Submit" value="Add" style="margin-left:20%;width:80%;" class="btn btn-primary btn-block btn-flat">ADD</button>
            </td>

        </tr>
    </table>
}
    </section>
    <!-- /.content -->
    <!-- /.content-wrapper -->

    <!-- Bootstrap 3.3.7 -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Scripts/adminlte.min.js"></script>

   
</body>
</html>
