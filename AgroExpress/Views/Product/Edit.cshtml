@model AgroExpress.DataLayer.Models.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}






<h2 style="text-align:center">Edit Product</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    if (ViewBag.Message != null)
    {
        <script>
            alert(@ViewBag.Message); // display string message
        </script>
    }
    <style>
        .register-box {
            margin-top: 1%;
        }
    </style>
    <div class="register-box">
        <div class="register-box-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.PKProductId)
            <div class="form-group has-feedback">
                <label>Product Name</label>
                @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control", placeholder = "Product name" } })
                @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
            </div>


            <div class="form-group has-feedback">
                <label>Selling Unit</label>
                @Html.EditorFor(model => model.SellingUnit, new { htmlAttributes = new { @class = "form-control", Placeholder = "Selling amount" } })
                @Html.ValidationMessageFor(model => model.SellingUnit, "", new { @class = "text-danger" })
            </div>

            <div class="form-group has-feedback">
                <label>Current Stock Amount</label>
                @Html.EditorFor(model => model.Stock, new { htmlAttributes = new { @class = "form-control", Placeholder = "Current stock" } })
                @Html.ValidationMessageFor(model => model.Stock, "", new { @class = "text-danger" })
            </div>

            <div class="row">
                <div class="col-xs-8">
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Update</button>
                </div>
                <!-- /.col -->
            </div>
        </div>
        <!-- /.form-box -->
    </div>
    <!-- /.form-box -->
}

