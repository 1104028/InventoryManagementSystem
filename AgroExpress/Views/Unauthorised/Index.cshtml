@{
    ViewBag.Title = "UnAuthorised Access";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Main content -->
    <section class="content">
        <div class="error-page">
            <h2 class="headline text-yellow"> 401</h2>

            <!-- /.error-content -->
        </div>
        <!-- /.error-page -->
    </section>
    <section>
        <div>
            <h3 style="align-content:center"><i class="fa fa-warning text-yellow"></i> Oops! : Unauthorised Request.</h3>
            <p style="align-content:center">
                You <b>@HttpContext.Current.User.Identity.Name</b> do not have permission to access the requested resource due to security restrictions.
                In order to gain access, please speak to your system administrator.
            </p>
        </div>

    </section>
    <!-- /.content -->
</div>