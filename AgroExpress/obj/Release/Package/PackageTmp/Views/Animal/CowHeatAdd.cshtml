@model AgroExpress.DataLayer.ViewModel.CowHeatAdd

@{
    ViewBag.Title = "CowHeatAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="text-align:center">Add Cow Heat Inforamtion</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    if (ViewBag.success != null)
    {
        <script>
            alert("Cow Heat Inforamtion has been added Successfully"); // display string message
        </script>
    }
       <script type="text/javascript">
           $(function () {
               $("#animalTypeID").change(function () {

                   var AnimalTypeID = $("#animalTypeID :selected").val();
                   var url = '../Animal/GetAnimalListForType';
                   var data1 = { "animalTypeID": AnimalTypeID };

                   $.post(url, data1, function (data) {
                       var items = [];
                       items.push("<option value=" + 0 + ">" + "Select Animal" + "</option>");
                       for (var i = 0; i < data.length; i++) {

                           items.push("<option value=" + data[i].Value + ">" + data[i].Text + "</option>");
                       }
                       $("#animalId").html(items.join(' '));
                   })
               });
           });
    </script>
    
    <style>
        .register-box {
            margin-top: 1%;
        }
    </style>
    <div class="register-box">
        <div class="register-box-body">

            <div class="form-group has-feedback">
                <label>Animal Category</label>
                @Html.DropDownListFor(model => model.animalTypeID, Model.AnimalTypes, "Select Animal Category", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.animalTypeID, "", new { @class = "text-danger" })
            </div>

            <div class="form-group has-feedback">
                <label>Animal Code Name</label>
                @Html.DropDownListFor(model => model.animalId, Model.AnimalList, "Select Animal", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.animalId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group has-feedback">
                <label>Heat Date</label>
                @Html.EditorFor(model => model.heatDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                @Html.ValidationMessageFor(model => model.heatDate, "", new { @class = "text-danger" })
            </div>

            <div class="form-group has-feedback">
                <label>Heat Time</label>
                @Html.DropDownListFor(model => model.heatTime, Model.HeatTimeOptions , new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.heatTime, "", new { @class = "text-danger" })
            </div>

            <div class="form-group has-feedback">
                <label>Injected Date</label>
                @Html.EditorFor(model => model.injectedDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                @Html.ValidationMessageFor(model => model.injectedDate, "", new { @class = "text-danger" })
            </div>

            <div class="form-group has-feedback">
                <label>Injected Time</label>
                @Html.DropDownListFor(model => model.injectedTime, Model.InjectedTimeOptions , new { @class = "form-control", Placeholder = "Heat Time"  })
                @Html.ValidationMessageFor(model => model.injectedTime, "", new { @class = "text-danger" })
            </div>
            <div class="form-group has-feedback">
                <label>Next Heat Date</label>
                @Html.EditorFor(model => model.nextHeatDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                @Html.ValidationMessageFor(model => model.nextHeatDate, "", new { @class = "text-danger" })
            </div>
            <div class="form-group has-feedback">
                <label>Heat Summary</label>
                @Html.EditorFor(model => model.heatSummary, new { htmlAttributes = new { @class = "form-control", Placeholder = "Heat Summary" } })
                @Html.ValidationMessageFor(model => model.heatSummary, "", new { @class = "text-danger" })
            </div>

            <div class="form-group has-feedback">
                <label>Expected Delivery Date</label>
                @Html.EditorFor(model => model.expectedDeliveryDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                @Html.ValidationMessageFor(model => model.expectedDeliveryDate, "", new { @class = "text-danger" })
            </div>

            <div class="form-group has-feedback">
                <label>Delivery Status</label>
                @Html.EditorFor(model => model.deliveryStatus, new { htmlAttributes = new { @class = "form-control", Placeholder = "Delivery Status" } })
                @Html.ValidationMessageFor(model => model.deliveryStatus, "", new { @class = "text-danger" })
            </div>

            <div class="form-group has-feedback">
                <label>Actual Delivery Date</label>
                @Html.EditorFor(model => model.actualDeliveryDate, new { htmlAttributes = new { @class = "form-control", type="date" } })
                @Html.ValidationMessageFor(model => model.actualDeliveryDate, "", new { @class = "text-danger" })
            </div>
           

            <div class="row">
                <div class="col-xs-8">
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">ADD</button>
                </div>
                <!-- /.col -->
            </div>
        </div>
        <!-- /.form-box -->
    </div>
    <!-- /.form-box -->
}



