@model AgroExpress.DataLayer.ViewModel.AnimalVaccinationInfoAdd
@{
    ViewBag.Title = "Vaccination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="text-align:center">Vaccination</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <style>

        input, textarea {
            display: block;
            width: 100%;
            height: 34px;
            padding: 6px 12px;
            font-size: 14px;
            line-height: 1.42857143;
            color: #555;
            background-color: #fff;
            background-image: none;
            border: 1px solid #ccc;
        }

        th, td {
            text-align: center;
        }
    </style>
    <div class="row">

        <div class="col-md-1"></div>
        <div class="col-md-3">
            <div class="form-group has-feedback">
                <label>Vaccine Name </label>
                @Html.EditorFor(model => model.VaccineName)
                @Html.ValidationMessageFor(modelItem => Model.VaccineName, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="col-md-3">
            <div class="form-group has-feedback">
                <label>Vaccination Date </label>
                @Html.EditorFor(model => model.VaccinationDate)
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group has-feedback">
                <label>NextVaccation Date </label>
                @Html.EditorFor(model => model.NextVaccationDate)
            </div>
        </div>
        <div class="col-md-1">
            <div class="form-group has-feedback">
                <label>Notification </label>
                @Html.EditorFor(model => model.GetNotiFication)
            </div>
        </div>
        <div class="col-md-1"></div>
        @Html.HiddenFor(modelItem => Model.AnimalTypeId)
    </div>

    <h3 style="text-align:center">Animal</h3>
    <div>
        <table class="table table-bordered table-striped">
            <tr>
                <th id="table-header">
                    CodeName
                </th>
                <th id="table-header">
                    Comment
                </th>

                <th id="table-header">
                    Not Applied
                </th>

            </tr>

            @for (var item=0; item<Model.VaccinationInfo.Count;item++)
            {
                <tr>
                    <td id="table-header">
                        @Html.DisplayFor(modelItem => Model.VaccinationInfo[item].CodeName)
                        @Html.HiddenFor(modelItem => Model.VaccinationInfo[item].AnimalId)
                    </td>
                    <td id="table-header">
                        @Html.EditorFor(modelItem => Model.VaccinationInfo[item].Comments)
                    </td>

                    <td id="table-header">
                        @Html.EditorFor(modelItem => Model.VaccinationInfo[item].isNotApplied)
                    </td>
                </tr>
            }
            <tr id="table-header">
                <td colspan="1"></td>
                <td><button type="submit" class="btn btn-primary btn-block btn-flat">ADD</button></td>
            </tr>
        </table>
    </div>

}

