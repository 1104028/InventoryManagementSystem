@model AgroExpress.DataLayer.ViewModel.AnimalVaccineEdit
@{
    ViewBag.Title = "Animal Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="text-align:center">Update Animal Vaccine Info</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    if (ViewBag.success != null)
    {
        <script>
            alert("Animal Vaccine Info has been Updated Successfully"); // display string message
        </script>
    }
    <style>
        .register-box {
            margin-top: 1%;
        }
    </style>
    <div class="register-box">
        <div class="register-box-body">
            @Html.HiddenFor(model => model.PKVaccinationId)

            <div class="form-group has-feedback">
                <label>Animal Code Name</label>
                @Html.EditorFor(model => model.AnimalCodeName, new { htmlAttributes = new { @class = "form-control", placeholder = "Animal Code Name", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.AnimalCodeName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group has-feedback">
                <label>Next Date of Medication</label>
                @Html.EditorFor(model => model.NextVaccationDate, new { htmlAttributes = new { @class = "form-control", type = "date", placeholder = "Next Date of Vaccination" } })
                @Html.ValidationMessageFor(model => model.NextVaccationDate, "", new { @class = "text-danger" })
            </div>

            <div class="form-group has-feedback">
                <label>Comments</label>
                @Html.EditorFor(model => model.Comments, new { htmlAttributes = new { @class = "form-control", Placeholder = "Comments" } })
                @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })
            </div>

            <div class="row">
                <div class="col-xs-8">
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Update</button>
                </div>
                <!-- /.col -->
            </div>
        </div>
        <!-- /.form-box -->
    </div>
    <!-- /.form-box -->
}
