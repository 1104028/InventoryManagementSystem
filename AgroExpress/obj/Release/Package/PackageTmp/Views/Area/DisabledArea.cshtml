@model IEnumerable<AgroExpress.DataLayer.Models.Area>

@{

     ViewBag.Title = "Disabled Area List";
     Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/ListStylesRuku.css" rel="stylesheet" />
<h2 id="title">Disabled Area List</h2>

<p id="create">
    @Html.ActionLink("Create New", "Add")
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th id="table-header">
            @Html.DisplayNameFor(model => model.AreaName)
        </th>
        <th id="table-header">
            @Html.DisplayNameFor(model => model.SalePointId)
        </th>
        <th id="table-header">Operation</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td id="table-header">
                @Html.DisplayFor(modelItem => item.AreaName)
            </td>
            <td id="table-header">
                @Html.DisplayFor(modelItem => item.SalePointId)
            </td>

            <td id="table-header">
                @Html.ActionLink("Edit", "Edit", new { id = item.PKAreaId }) |
                @Html.ActionLink(
                  "Enable",
                  "Enable",
                  new { id = item.PKAreaId },
                  new { onclick = "return confirm('Are you sure you wish to disable this Area?');" })
            </td>
        </tr>
    }

</table>
