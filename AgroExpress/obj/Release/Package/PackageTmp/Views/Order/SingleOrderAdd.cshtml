@model AgroExpress.DataLayer.ViewModel.AddOrder
@{
    ViewBag.Title = "OrderList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="text-align:center">Place A Order</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    if (ViewBag.success != null)
    {
        <script>
           alert('@ViewBag.success'); // display string message
        </script>
    }
    <style>
        .register-box {
            margin-top: 1%;
        }
    </style>

    <div class="register-box">
        <div class="register-box-body">

            <div class="form-group has-feedback">
                <label>Order Placing Date</label>
                @Html.EditorFor(model => model.OrderPlacingDateTime, new { htmlAttributes = new { @class = "form-control", placeholder = "Date" } })
                @Html.ValidationMessageFor(model => model.OrderPlacingDateTime, "", new { @class = "text-danger" })
            </div>

            <div class="form-group has-feedback">
                <label>Product</label>
                @Html.DropDownListFor(m => m.PKProductId, Model.productlist, "- Please select a Product -", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PKProductId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group has-feedback">
                <label>Amount</label>
                @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
            </div>

            <div class="row">
                <div class="col-xs-8">
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Add</button>
                </div>
                <!-- /.col -->
            </div>
        </div>
        <!-- /.form-box -->
    </div>
    <!-- /.form-box -->
}