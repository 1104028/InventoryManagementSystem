@model AgroExpress.DataLayer.ViewModel.MilkSummeryEdit

@{
    ViewBag.Title = "Edit Milk Summary";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2 style="text-align:center">Edit Milk Summary</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    if (ViewBag.success != null)
    {
        <script>
            alert("Milk Summary has been updated Successfully"); // display string message
        </script>
    }
    <style>
        .register-box {
            margin-top: 1%;
        }
    </style>
    <div class="register-box">
        <div class="register-box-body">

            <div class="form-group has-feedback">
                <label>Date</label>
                @Html.DisplayFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", type = "date" } })

            </div>


            <div class="form-group has-feedback">
                <label>Culf Morning</label>
                @Html.EditorFor(model => model.CulfMorning, new { htmlAttributes = new { @class = "form-control", Placeholder = "Selling amount" } })
                @Html.ValidationMessageFor(model => model.CulfMorning, "", new { @class = "text-danger" })
            </div>

            <div class="form-group has-feedback">
                <label>Culf Afternoon</label>
                @Html.EditorFor(model => model.CulfAfternoon, new { htmlAttributes = new { @class = "form-control", Placeholder = "Selling amount" } })
                @Html.ValidationMessageFor(model => model.CulfAfternoon, "", new { @class = "text-danger" })
            </div>

            <div class="form-group has-feedback">
                <label>Stuff Consumption</label>
                @Html.EditorFor(model => model.Stuff, new { htmlAttributes = new { @class = "form-control", Placeholder = "Selling amount" } })
                @Html.ValidationMessageFor(model => model.Stuff, "", new { @class = "text-danger" })
            </div>

            <div class="form-group has-feedback">
                <label>Factory Consumption</label>
                @Html.EditorFor(model => model.Factory, new { htmlAttributes = new { @class = "form-control", Placeholder = "Selling amount" } })
                @Html.ValidationMessageFor(model => model.Factory, "", new { @class = "text-danger" })
            </div>

            <div class="form-group has-feedback">
                <label>Wastage</label>
                @Html.EditorFor(model => model.Wastage, new { htmlAttributes = new { @class = "form-control", Placeholder = "Selling amount" } })
                @Html.ValidationMessageFor(model => model.Wastage, "", new { @class = "text-danger" })
            </div>

            <div class="row">
                <div class="col-xs-8">
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">ADD</button>
                </div>
                <!-- /.col -->
            </div>
        </div>
        <!-- /.form-box -->
    </div>
    <!-- /.form-box -->
}

